    <script>
        const toggleTableBtn = document.getElementById('toggleTableBtn');
        const summaryTable = document.getElementById('summaryTable');
        const icon = toggleTableBtn.querySelector('i');

        toggleTableBtn.addEventListener('click', () => {
            const isHidden = summaryTable.style.display === 'none' || summaryTable.style.display === '';
            summaryTable.style.display = isHidden ? 'table' : 'none'; // Use 'table' for correct rendering
            if (window.innerWidth <= 768 && !isHidden) { // If mobile and table is being hidden
                 summaryTable.style.display = 'none';
            } else if (window.innerWidth <= 768 && isHidden) { // If mobile and table is being shown
                summaryTable.style.display = 'block'; // for overflow-x
            }

            toggleTableBtn.innerHTML = isHidden ? `Masquer le Tableau Récapitulatif <i class="fas fa-chevron-up"></i>` : `Afficher le Tableau Récapitulatif <i class="fas fa-chevron-down"></i>`;
        });

        // Share functionality
        const copyLinkBtn = document.getElementById('copyLinkBtn');
        copyLinkBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(window.location.href).then(() => {
                copyLinkBtn.innerHTML = '<i class="fas fa-check"></i> Lien copié !';
                setTimeout(() => {
                    copyLinkBtn.innerHTML = '<i class="fas fa-copy"></i> Copier le lien';
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
                alert('Impossible de copier le lien.');
            });
        });

        // Update share URLs dynamically (important if the page URL might change or for accuracy)
        document.addEventListener('DOMContentLoaded', () => {
            const pageUrl = encodeURIComponent(window.location.href);
            const pageTitle = encodeURIComponent(document.title);
            
            const twitterLink = document.querySelector('.share-buttons .twitter');
            if(twitterLink) twitterLink.href = `https://twitter.com/intent/tweet?text=${encodeURIComponent('Découvrez les clés marketing essentielles pour 2025 !')}&url=${pageUrl}`;

            const linkedinLink = document.querySelector('.share-buttons .linkedin');
            if(linkedinLink) linkedinLink.href = `https://www.linkedin.com/sharing/share-offsite/?url=${pageUrl}`;

            const facebookLink = document.querySelector('.share-buttons .facebook');
            if(facebookLink) facebookLink.href = `https://www.facebook.com/sharer/sharer.php?u=${pageUrl}`;
            
            const whatsappLink = document.querySelector('.share-buttons .whatsapp');
            if(whatsappLink) whatsappLink.href = `whatsapp://send?text=${encodeURIComponent('Découvrez les clés marketing essentielles pour 2025 ! ' + window.location.href)}`;
        });
    </script>

